<!-- Header da Agenda -->
<div class="agenda-header">
 
  <div class="agenda-controls">
    <div class="date-navigation">
      <%= link_to agenda_path(date: @current_date - 1.week), class: "nav-arrow" do %>
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
        </svg>
      <% end %>
      
      <span class="current-month">
        <%= @current_date.strftime("%B de %Y").capitalize %>
      </span>
      
      <%= link_to agenda_path(date: @current_date + 1.week), class: "nav-arrow" do %>
        <svg viewBox="0 0 24 24" fill="currentColor">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
        </svg>
      <% end %>
      
      <%= link_to agenda_path, class: "today-btn" do %>
        Hoje
      <% end %>
    </div>
    
    <%= link_to new_appointment_path, class: "new-session-btn" do %>
      <svg viewBox="0 0 24 24" fill="currentColor">
        <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
      </svg>
      Nova Sessão
    <% end %>
  </div>
</div>

<!-- Calendário Semanal -->
<div class="calendar-container">
  <div class="calendar-grid">
    <!-- Cabeçalho dos dias -->
    <div class="calendar-header">
      <div class="time-column"></div>
      <% @week_days.each_with_index do |day, index| %>
        <div class="day-header <%= 'today' if day == Date.current %>">
          <div class="day-name"><%= day.strftime("%a") %></div>
          <div class="day-number"><%= day.day %></div>
        </div>
      <% end %>
    </div>
    
    <!-- Grade de horários -->
    <div class="calendar-body">
      <% @time_slots.each do |time_slot| %>
        <div class="time-row">
          <!-- Coluna de horário -->
          <div class="time-slot" data-hour="<%= time_slot.hour %>">
            <%= time_slot.strftime("%H:%M") %>
          </div>
          
          <!-- Colunas dos dias -->
          <% @week_days.each do |day| %>
            <div class="day-cell" data-date="<%= day %>" data-time="<%= time_slot.strftime("%H:%M") %>">
              <!-- Verificar se há sessão neste horário -->
              <% session = @sessions.find { |s| s[:date] == day && s[:time].strftime("%H:%M") == time_slot.strftime("%H:%M") } %>
              <% if session %>
                <%= link_to edit_appointment_path(session[:id]), class: "session-block #{session[:session_type]}" do %>
                  <div class="session-patient"><%= session[:patient_name] %></div>
                  <div class="session-type"><%= session[:session_type].capitalize %></div>
                  <% if session[:confirmed] %>
                    <div class="session-confirmed">✓ Confirmada</div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


