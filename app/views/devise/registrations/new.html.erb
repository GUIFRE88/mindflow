<div class="login-header">
  <div class="logo">
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
    </svg>
  </div>
  <h1 class="brand-name">MindFlow</h1>
  <h2 class="welcome-text">Criar conta</h2>
  <p class="subtitle">Organize seus atendimentos e pacientes em um só lugar</p>
</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "login-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :first_name, "Nome", class: "form-label" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "Seu nome", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Sobrenome", class: "form-label" %>
        <%= f.text_field :last_name, autocomplete: "family-name", placeholder: "Seu sobrenome", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "E-mail", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "seu@email.com", class: "form-control" %>
      </div>

  <div class="form-group">
    <%= f.label :password, "Senha", class: "form-label" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(<%= @minimum_password_length %> caracteres mínimo)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "********", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "********", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Criar conta", class: "btn btn-login" %>
  </div>
<% end %>

<div class="register-link">
  <p>Já tem uma conta? <%= link_to "Fazer login", new_user_session_path %></p>
</div>
