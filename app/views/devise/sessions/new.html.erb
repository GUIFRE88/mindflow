<div class="login-header">
  <div class="logo">
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
    </svg>
  </div>
  <h1 class="brand-name">MindFlow</h1>
  <h2 class="welcome-text">Bem-vindo de volta</h2>
  <p class="subtitle">Organize seus atendimentos e pacientes em um só lugar</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "login-form" }) do |f| %>
  <% if alert %>
    <div class="alert alert-alert">
      <%= alert %>
    </div>
  <% end %>

  <% if notice %>
    <div class="alert alert-notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, "E-mail", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seu@email.com", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Senha", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "********", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Entrar", class: "btn btn-login" %>
  </div>
<% end %>

<div class="register-link">
  <p>Não tem uma conta? <%= link_to "Criar conta", new_user_registration_path %></p>
</div>
