<!DOCTYPE html>
<html>
  <head>
    <title>Mindflow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="dashboard-layout">
        <!-- Sidebar -->
        <div class="sidebar">
          <div class="sidebar-header">
            <%= link_to root_path, class: "sidebar-logo" do %>
              <div class="sidebar-logo-icon">
                <%= image_tag "logo.png", alt: "MindFlow Logo", class: "sidebar-logo-image" %>
              </div>
              <h1 class="sidebar-logo-text">MindFlow</h1>
            <% end %>
          </div>
          
          <nav class="sidebar-nav">
            <%= link_to root_path, class: "nav-item #{'active' if current_page?(root_path)}" do %>
              <svg class="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
              Dashboard
            <% end %>
            
            <%= link_to agenda_path, class: "nav-item #{'active' if current_page?(agenda_path)}" do %>
              <svg class="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
              </svg>
              Agenda
            <% end %>
            
            <%= link_to patients_path, class: "nav-item #{'active' if current_page?(patients_path)}" do %>
              <svg class="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H16c-.8 0-1.54.5-1.85 1.26L12.5 14H10v4h2v6h4z"/>
              </svg>
              Pacientes
            <% end %>
            
            <a href="#" class="nav-item">
              <svg class="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
              Relatórios
            </a>
            
            <a href="#" class="nav-item">
              <svg class="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
              </svg>
              Anamnese
            </a>
          </nav>
          
          <!-- User Section -->
          <div class="sidebar-user">
            <div class="user-info">
              <div class="user-avatar">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
              <div class="user-details">
                <p class="user-name"><%= current_user.display_name %></p>
                <p class="user-email"><%= current_user.email %></p>
              </div>
            </div>
            <%= form_with url: destroy_user_session_path, method: :delete, local: true, class: "logout-form" do |f| %>
              <button type="submit" class="user-logout" title="Sair">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
                </svg>
              </button>
            <% end %>
          </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content">
          <!-- Header -->
          <div class="dashboard-header">
            <h1 class="header-title">
              <% if current_page?(agenda_path) %>
                Agenda
              <% elsif current_page?(patients_path) %>
                Pacientes
              <% elsif current_page?(new_patient_path) %>
                Novo Paciente
              <% elsif request.path.include?('/patients/') && request.path.include?('/edit') %>
                Editar Paciente
              <% elsif request.path.include?('/patients/') && !request.path.include?('/edit') && !request.path.include?('/new') %>
                Detalhes do Paciente
              <% elsif current_page?(new_appointment_path) %>
                Nova Sessão
              <% elsif request.path.include?('/agenda/sessions/') && request.path.include?('/edit') %>
                Editar Sessão
              <% elsif current_page?(root_path) %>
                Dashboard
              <% else %>
                Dashboard
              <% end %>
            </h1>
          </div>
          
          <!-- Content -->
          <div class="dashboard-content">
            <% if notice %>
              <div class="alert alert-notice alert-dismissible fade show" role="alert">
                <%= notice %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>
            
            <% if alert %>
              <div class="alert alert-alert alert-dismissible fade show" role="alert">
                <%= alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% end %>
            
            <%= yield %>
          </div>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
